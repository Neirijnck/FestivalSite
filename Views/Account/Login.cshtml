@model FestivalSite.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<hgroup class="title">
</hgroup>

<section id="loginForm">
<h2>Aanmelden</h2>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Log in</legend>
        <ol>
            <li>
                <label>Gebruikersnaam</label>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control flat input-sm" })
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li>
                <label>Wachtwoord</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control flat input-sm" })
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            <li>
                @Html.CheckBoxFor(m => m.RememberMe, new { id = "checkbox1" })
                <label class="checkbox">Onthoud mij?</label>
            </li>
        </ol>
        <input type="submit" value="Log in" class="btn btn-primary btn-wide" />
    </fieldset>
    <p>
        @Html.ActionLink("Registreer","Register") indien je nog geen account hebt.
    </p>
}
</section>

<section class="social" id="socialLoginForm">
    <h2>Aanmelden met een andere service.</h2>
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

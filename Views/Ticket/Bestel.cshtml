@model FestivalSite.Models.Ticket

@{
    ViewBag.Title = "Bestel";
}

<h2>Bestel Tickets</h2>
@using (Html.BeginForm("Bestel", "Ticket", FormMethod.Post, new { enctype = "multipart/form-data", @class = "pure-form pure-form-stacked" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="BodyText">
        <legend>Ticket</legend>

        <div class="editor-label">
            Op naam van:
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.TicketHolder, new { @class = "form-control input-sm", placeholder = "Naam" })
            @Html.ValidationMessageFor(model => model.TicketHolder)
        </div>

        @*<div class="editor-label">
            @Html.LabelFor(model => model.TicketHolderEmail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TicketHolderEmail)
            @Html.ValidationMessageFor(model => model.TicketHolderEmail)
        </div>*@

        <div class="editor-label">
           Type Ticket:
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m => m.TicketType.Name, new SelectList(FestivalSite.Models.DAL.TicketTypeRepository.GetTicketTypes(), "Name"), new { @class = "form-control" })
        </div>

        <div class="editor-label">
            Aantal:
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Amount, new { @class = "form-control input-sm", placeholder = "Aantal" })
            @Html.ValidationMessageFor(model => model.Amount)
        </div>

        <p>
            <input type="submit" value="Bestel" class="btn btn-primary btn-wide">
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
